[flake8]
max-line-length = 88
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    BasicSR/,
    tests/,

# Black: пробелы перед двоеточиями
# Black: перенос операторов
# Временно игнорировать длинные строки
# Игнорировать неиспользуемые импорты
ignore =
    E203,
    W503,
    E501,
    F401,
    E721
